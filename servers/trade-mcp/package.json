{
  "name": "trade-mcp",
  "version": "0.1.0",
  "description": "MCP server for international trade statistics via UN Comtrade",
  "type": "module",
  "main": "dist/server.js",
  "scripts": {
    "build": "tsc && node scripts/postbuild.cjs",
    "dev": "tsc --watch",
    "start": "node dist/server.js",
    "pack:mcpb": "npm run build && node ../../scripts/pack-mcpb.mjs trade-mcp",
    "clean": "rm -rf dist"
  },
  "dependencies": {
    "@cluster-mcp/core": "*",
    "@modelcontextprotocol/sdk": "^1.25.0",
    "zod": "^3.22.0"
  },
  "devDependencies": {
    "typescript": "^5.6.0"
  }
}
