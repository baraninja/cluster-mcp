{
  "manifest_version": "0.2",
  "name": "environment-mcp",
  "version": "0.1.0",
  "description": "MCP server for air quality data via OpenAQ v3",
  "author": {
    "name": "cluster-mcp"
  },
  "license": "MIT",
  "server": {
    "type": "node",
    "entry_point": "dist/server.js",
    "mcp_config": {
      "command": "node",
      "args": [
        "${__dirname}/dist/server.js"
      ],
      "env": {
        "OPENAQ_API_KEY": "${user_config.openaq_api_key}"
      }
    }
  },
  "compatibility": {
    "runtimes": {
      "node": ">=20.0.0"
    }
  },
  "user_config": {
    "openaq_api_key": {
      "type": "string",
      "title": "OpenAQ API Key",
      "description": "API key for OpenAQ v3 requests. Required.",
      "sensitive": true,
      "required": true
    }
  }
}
